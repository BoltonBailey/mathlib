/-- Auxiliary tactic for showing that `witt_package.map` respects ring data. -/
meta def witt_map : tactic unit :=
`[funext n,
  show f (aeval _ _) = aeval _ _,
  rw map_aeval,
  apply eval‚ÇÇ_hom_congr (ring_hom.ext_int _ _) _ rfl,
  ext ‚ü®i, k‚ü©,
  fin_cases i; refl]

variable [fact p.prime]

@[simp] lemma map_fun_zero : map_fun f (0 : ùïé R) = 0 :=
by witt_map

@[simp] lemma map_fun_one : map_fun f (1 : ùïé R) = 1 :=
by witt_map

@[simp] lemma map_fun_add (x y : ùïé R) :
  map_fun f (x + y) = map_fun f x + map_fun f y :=
by witt_map

@[simp] lemma map_fun_mul (x y : ùïé R) :
  map_fun f (x * y) = map_fun f x * map_fun f y :=
by witt_map

@[simp] lemma map_fun_neg (x : ùïé R) :
  map_fun f (-x) = -map_fun f x :=
by witt_map

