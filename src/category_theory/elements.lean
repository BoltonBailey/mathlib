variables {F : C ‚•§ Type w}

def as_element {X : C} (x : F.obj X) : F.elements := ‚ü®X, x‚ü©

@[simp] lemma as_element_fst {X : C} (x : F.obj X) : (as_element x).1 = X := rfl
