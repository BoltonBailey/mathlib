variables {F : C ‚•§ Type w}

@[simp] lemma condition {X Y : F.elements} (f : X ‚ü∂ Y) : F.map f.1 X.2 = Y.2 := f.2

@[ext]
lemma ext {x y : F.elements} (f g : x ‚ü∂ y) (w : f.val = g.val) : f = g :=
subtype.eq' w

