def as_element_hom_of_eq {X Y : C} (f : X ‚ü∂ Y) (x : F.obj X) (y : F.obj Y) (h : F.map f x = y) :
  as_element x ‚ü∂ as_element y :=
{ val := f, property := h }

@[simp] lemma as_element_hom_of_eq_val {X Y : C} (f : X ‚ü∂ Y) (x : F.obj X) (y : F.obj Y) (h : F.map f x = y) :
  (as_element_hom_of_eq f x y h).val = f := rfl

@[simp] lemma as_element_hom_of_eq_comp {X Y Z : C} (f : X ‚ü∂ Y) (g : Y ‚ü∂ Z)
  (x : F.obj X) (y : F.obj Y) (z : F.obj Z) (h‚ÇÅ : F.map f x = y) (h‚ÇÇ : F.map g y = z) :
  as_element_hom_of_eq f x y h‚ÇÅ ‚â´ as_element_hom_of_eq g y z h‚ÇÇ =
    as_element_hom_of_eq (f ‚â´ g) x z (by { rw [‚Üêh‚ÇÇ, ‚Üêh‚ÇÅ], simp }) :=
rfl

