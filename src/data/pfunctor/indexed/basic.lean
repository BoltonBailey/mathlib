open fam

@[simp, reassoc]
theorem map_eq {Œ± Œ≤ : fam I} (f : Œ± ‚ü∂ Œ≤) {i : J} (a : P.A i) (g : P.B i a ‚ü∂ Œ±) :
  value i (P.obj _) ‚ü®a, g‚ü© ‚â´ P.map f = value i (P.obj _) ‚ü®a, g ‚â´ f‚ü© :=
by ext _ ‚ü® ‚ü© : 2; simp [map_eq']

def Idx (i : J) := Œ£ (x : P.A i) j, P.B i x j

